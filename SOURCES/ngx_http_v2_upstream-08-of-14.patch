+
+    } else {
+        free_chunk = b->pos - b->last;
+        free_total = free_chunk;
+    }
+
+    if (size > free_total) {
+        rev->ready = 0;
+        rev->active = 1;
+        return NGX_ERROR;
+    }
+
+    if (free_chunk > size) {
+        free_chunk = size;
+    }
+
+    b->last = ngx_cpymem(b->last, pos, free_chunk);
+    pos += free_chunk;
+    size -= free_chunk;
+
+    if (size) {
+        b->last = ngx_cpymem(b->start, pos, size);
+        pos += size;
+    }
+
+    rev->ready = 1;
+    rev->active = 0;
+
+#if (NGX_HAVE_KQUEUE)
+    rev->available += free_chunk + size;
+#else
+    rev->available = 1;
+#endif
+
+    return NGX_OK;
+}
