+                   size, stream->in_closed);
+
+    if (stream->in_closed) {
+        if (rev->available || size) {
+            rev->pending_eof = 1;
+
+        } else {
+            rev->pending_eof = 0;
+            rev->eof = 1;
+            rev->ready = 1;
+            rev->active = 0;
+        }
