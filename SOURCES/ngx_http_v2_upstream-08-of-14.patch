+    off_t                 size;
+    ngx_event_t          *rev;
+    ngx_connection_t     *fc;
+    ngx_http_upstream_t  *u;
+
+    u = stream->request->upstream;
+    fc = stream->fake_connection;
+    rev = fc->read;
