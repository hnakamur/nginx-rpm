         return;
     }
 
-    fc = stream->request->connection;
+    fc = stream->fake_connection;
 
     if (!fc->error && stream->exhausted) {
         return;
@@ -1561,7 +1558,7 @@ ngx_http_v2_filter_cleanup(void *data)
 
             stream->waiting = 0;
 
-            wev = stream->request->connection->write;
+            wev = stream->fake_connection->write;
 
             wev->active = 0;
             wev->ready = 1;
